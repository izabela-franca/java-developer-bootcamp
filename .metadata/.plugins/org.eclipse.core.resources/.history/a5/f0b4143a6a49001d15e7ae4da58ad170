package logica.repeticao;

import br.com.softblue.commons.io.Console;

public class Main {

	public static void main(String[] args) {
		
		double nota;
		int cont = 1;
		double soma = 0;
		
		do {
			System.out.println("Digite a nota " + cont + ":");
			nota = Console.readDouble();
			cont++;
			
			if (nota != -1) {
				soma += nota;
			}
		} while (nota != -1);
		System.out.println("Média = " + soma/cont);
	}
}
